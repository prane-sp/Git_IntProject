                        $("input[id$='AddlVendors']").addClass("readonly");
                    }
                });
                if($("input[id$='submitForAnother']").val() != "") {
                    $("#submitForAnotherChk").attr("checked", "checked");
                }
                if($("input[id$='AddlVendors']").val() != "") {
                    $("#additionalVendorsChk").attr("checked", "checked");
                }
                $("#submitForAnotherChk").trigger("change");
