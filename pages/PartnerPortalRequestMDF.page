                $("#submitForAnotherChk").change(function() {
                    if($(this).attr("checked")) {
                       $("input[id$='submitForAnother']").removeAttr("readonly"); 
                       $("input[id$='submitForAnother']").removeClass("readonly"); 
                    }
                    else {
                        $("input[id$='submitForAnother']").val("");
                        $("input[id$='submitForAnother']").attr("readonly", "readonly");
                        $("input[id$='submitForAnother']").addClass("readonly");
                    }
